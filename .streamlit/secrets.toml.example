# .streamlit/secrets.toml
# API Keys
DEEPSEEK_API_KEY = "sk_your_deepseek_key_here"
GITHUB_TOKEN = "ghp_your_github_token_here"
SEARCH_API_PROVIDER = "serpapi"  # or "bing"
SEARCH_API_KEY = "your_search_api_key_here"

# PostgreSQL 数据库配置 (可选)
# 设置 DB_TYPE = "postgresql" 启用数据库模式
# 默认使用 JSON 文件存储，无需配置数据库
DB_TYPE = "json"  # 或 "postgresql"

# 如果使用 Supabase，请使用 Session pooler 连接字符串 (支持 IPv4)
# 格式: postgresql://postgres.[项目ID]:[密码]@aws-0-[区域].pooler.supabase.com:5432/postgres
DATABASE_URL = "postgresql://user:password@localhost:5432/infosynapse"